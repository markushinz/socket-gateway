{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":enablePreCommit"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "bumpVersion": "patch",
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "matchCategories": [
        "docker"
      ],
      "pinDigests": true
    }
  ]
}
